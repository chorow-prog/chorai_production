# Environment variables declared in this file are NOT automatically loaded by Prisma.
# Please add `import "dotenv/config";` to your `prisma.config.ts` file, or use the Prisma CLI with Bun
# to load environment variables from .env files: https://pris.ly/prisma-config-env-vars.

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

# Anwendung
# @meta {"description":"Node.js Umgebung (development oder production)","scopes":["dev","prod"],"defaults":{"dev":"development","prod":"production"}}
NODE_ENV=development

# @meta {"description":"Öffentliche URL des Frontends (wird im Browser genutzt)","scopes":["dev","prod"],"defaults":{"dev":"http://localhost:3000","prod":"https://example.com"}}
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Compose-Profile (z. B. "dev" oder "dev,n8n" lokal, "prod" bzw. "prod,n8n" auf Servern)
# @meta {"description":"Docker Compose Profile, die standardmäßig aktiviert werden","scopes":["dev","prod"],"defaults":{"dev":"dev","prod":"prod"}}
COMPOSE_PROFILES=dev
# @meta {"description":"Domain ohne Schema für Caddy/HTTPS","scopes":["prod"],"defaults":{"prod":"example.com"}}
SITE_DOMAIN=localhost
# @meta {"description":"E-Mail für Let's-Encrypt-Benachrichtigungen","scopes":["prod"],"defaults":{"prod":"admin@example.com"}}
ACME_EMAIL=admin@example.com
# @meta {"description":"Öffentliche Domain für n8n (falls separat erreichbar)","scopes":["prod"],"defaults":{"prod":"n8n.example.com"}}
N8N_DOMAIN=

# Optional: Neues Remote-Repo für git (wird von make setup-env genutzt)
# @meta {"description":"Optional: neues Git-Remote (git@github.com:user/repo.git) für automatische Umschaltung","scopes":["dev","prod"]}
NEW_REMOTE_URL=

# Postgres
# @meta {"description":"Postgres Benutzername","scopes":["dev","prod"],"defaults":{"dev":"postgres","prod":"postgres"}}
POSTGRES_USER=admin
# @meta {"description":"Postgres Datenbankname","scopes":["dev","prod"],"defaults":{"dev":"app","prod":"app"}}
POSTGRES_DB=app
# @meta {"description":"Postgres Passwort (wird auch in DATABASE_URL verwendet)","scopes":["dev","prod"],"defaults":{"dev":"change-me","prod":"change-me"}}
POSTGRES_PASSWORD=development
# Wichtig: Hier KEINE ${...}-Interpolation verwenden. Passwort direkt einsetzen.
# @meta {"description":"Direkter Prisma Connection-String (Passwort hier hart eintragen, keine ${...}-Platzhalter)","scopes":["dev","prod"],"defaults":{"dev":"postgresql://postgres:change-me@db:5432/app?schema=public","prod":"postgresql://postgres:change-me@db:5432/app?schema=public"}}
DATABASE_URL=postgresql://admin:development@db:5432/app?schema=public

# Auth
# @meta {"description":"Token für geschützte API-Routen (Header X-Admin-Token)","scopes":["dev","prod"],"defaults":{"dev":"please-change-me","prod":"please-change-me"}}
ADMIN_TOKEN=pZ4YbD8hQ2!x9K@3tN7sVw5ZrG1eLk0j
# Für lokale Übungen kann AUTH_DISABLED=true gesetzt werden
# @meta {"description":"Nur für lokale Übungen auf true setzen, sonst false lassen","scopes":["dev","prod"],"defaults":{"dev":"true","prod":"false"}}
AUTH_DISABLED=false

# n8n (Basic Auth aktiv, auch wenn nur lokal erreichbar)
# @meta {"description":"n8n Basic-Auth Benutzer","scopes":["dev","prod"],"defaults":{"dev":"admin","prod":"admin"}}
N8N_BASIC_AUTH_USER=clshorty01@me.com
# @meta {"description":"n8n Basic-Auth Passwort","scopes":["dev","prod"],"defaults":{"dev":"change-me","prod":"change-me"}}
N8N_BASIC_AUTH_PASSWORD=jpJ4i2U2fqme6Eo8VdAK

# pgAdmin
# @meta {"description":"Login-E-Mail für pgAdmin","scopes":["dev"],"defaults":{"dev":"admin@example.com"}}
PGADMIN_DEFAULT_EMAIL=clshorty01@me.com
# @meta {"description":"Passwort für pgAdmin","scopes":["dev"],"defaults":{"dev":"change-me"}}
PGADMIN_DEFAULT_PASSWORD=jpJ4i2U2fqme6Eo8VdAK

#N8N_Email
# @meta {"description":"Mailmodus für n8n (smtp, sendmail, ...)", "scopes":["dev","prod"],"defaults":{"dev":"smtp","prod":"smtp"}}
N8N_EMAIL_MODE=smtp
# @meta {"description":"SMTP Host für n8n (lokal z. B. Mailpit)","scopes":["dev","prod"],"defaults":{"dev":"mailpit","prod":"smtp.example.com"}}
N8N_SMTP_HOST=mailpit
# @meta {"description":"SMTP Port","scopes":["dev","prod"],"defaults":{"dev":"1025","prod":"587"}}
N8N_SMTP_PORT=1025
# @meta {"description":"true, wenn SMTP über SSL laufen soll","scopes":["dev","prod"],"defaults":{"dev":"false","prod":"true"}}
N8N_SMTP_SSL=false
# @meta {"description":"SMTP Benutzername (falls benötigt)","scopes":["dev","prod"]}
N8N_SMTP_USER=
# @meta {"description":"SMTP Passwort (falls benötigt)","scopes":["dev","prod"]}
N8N_SMTP_PASS=
# @meta {"description":"Absenderadresse für n8n E-Mails","scopes":["dev","prod"],"defaults":{"dev":"\"n8n <no-reply@localhost>\"","prod":"\"n8n <no-reply@example.com>\""}}
N8N_SMTP_SENDER="n8n <no-reply@localhost>"
# @meta {"description":"Protokoll für generierte Links (http/https)","scopes":["dev","prod"],"defaults":{"dev":"http","prod":"https"}}
N8N_PROTOCOL=http
# @meta {"description":"Host/Domain der in n8n-Links verwendet wird","scopes":["dev","prod"],"defaults":{"dev":"localhost:5678","prod":"n8n.example.com"}}
N8N_HOST=localhost:5678
# @meta {"description":"Externe Webhook-URL (falls n8n hinter Proxy läuft)","scopes":["dev","prod"],"defaults":{"dev":"http://localhost:5678/webhook/chat","prod":"https://n8n.example.com/webhook/chat"}}
N8N_WEBHOOK_URL=
# N8N_USER_MANAGEMENT_DISABLED=true
# N8N_SKIP_INSTANCE_OWNER_SETUP=true

# LiveKit (Voice Agent)
# Lokaler Dev-Server standardmäßig auf Port 7880
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=
# Optionaler Default-Raumname
LIVEKIT_DEFAULT_ROOM=voice-agent

