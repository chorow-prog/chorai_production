# Anwendung
# @meta {"description":"Node-Environment für Next.js","scopes":["dev","prod"],"defaults":{"dev":"development","prod":"production"}}
NODE_ENV=development
# @meta {"description":"Öffentliche URL des Frontends","scopes":["dev","prod"],"defaults":{"dev":"http://localhost:3000","prod":"https://app.example.com"}}
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# Compose-Profile (z. B. \"dev\" oder \"dev,n8n\" lokal, \"prod\" bzw. \"prod,n8n\" auf Servern)
# @meta {"description":"Standard-Profile, die Docker Compose laden soll","scopes":["dev","prod"],"defaults":{"dev":"dev","prod":"prod"}}
COMPOSE_PROFILES=dev
# @meta {"description":"Domain für Caddy/HTTPS","scopes":["dev","prod"],"defaults":{"dev":"localhost","prod":"app.example.com"}}
SITE_DOMAIN=localhost
# @meta {"description":"Kontaktadresse für Let's Encrypt","scopes":["prod"],"defaults":{"prod":"admin@example.com"}}
ACME_EMAIL=admin@example.com
# @meta {"description":"Öffentliche Domain für n8n","scopes":["prod"],"defaults":{"prod":"n8n.example.com"}}
N8N_DOMAIN=
# @meta {"description":"Öffentliche Domain für Supabase (optional)","scopes":["prod"],"defaults":{"prod":"sb-ai-test.dakatos.online"}}
SUPABASE_DOMAIN=

# Postgres
# @meta {"description":"Postgres-Benutzer","scopes":["dev","prod"],"defaults":{"dev":"postgres","prod":"supabase_admin"}}
POSTGRES_USER=postgres
# @meta {"description":"Postgres-Datenbankname","scopes":["dev","prod"],"defaults":{"dev":"app","prod":"aiTestProdDB"}}
POSTGRES_DB=app
# @meta {"description":"Postgres-Passwort","scopes":["dev","prod"],"defaults":{"dev":"change-me","prod":"change-me"}}
POSTGRES_PASSWORD=change-me
# @meta {"description":"Host-Port, unter dem Supabase-Postgres verfügbar ist","scopes":["dev","prod"],"defaults":{"dev":"54322","prod":"54322"}}
POSTGRES_PORT=54322
# @meta {"description":"Hostname, den interne Supabase-Dienste nutzen","scopes":["dev","prod"],"defaults":{"dev":"db","prod":"db"}}
POSTGRES_HOST=db
# @meta {"description":"Externer Port für direkten Postgres-Zugriff","scopes":["dev","prod"],"defaults":{"dev":"54324","prod":"54324"}}
POSTGRES_DIRECT_PORT=54324
# @meta {"description":"App-spezifischer Postgres-Benutzer (z. B. n8n/Prisma)","scopes":["dev","prod"],"defaults":{"dev":"app_user","prod":"shorty"}}
APP_DB_USER=app_user
# @meta {"description":"Passwort für den App-Benutzer","scopes":["dev","prod"],"defaults":{"dev":"please-change-me","prod":"please-change-me"}}
APP_DB_PASSWORD=please-change-me
# @meta {"description":"Standard-Datenbank für App-Verbindungen","scopes":["dev","prod"],"defaults":{"dev":"app","prod":"aiTestProdDB"}}
APP_DB_NAME=app
# Wichtig: Hier KEINE ${...}-Interpolation verwenden. Passwort direkt einsetzen.
# @meta {"description":"Komplette Datenbank-URL (inkl. Passwort)","scopes":["dev","prod"],"defaults":{"dev":"postgresql://postgres:change-me@db:54322/app?schema=public","prod":"postgresql://supabase_admin:change-me@localhost:54322/aiTestProdDB?schema=public"}}
DATABASE_URL=postgresql://postgres:change-me@localhost:54322/app?schema=public
# @meta {"description":"Alternative DB-URL für Container (nutzt host.docker.internal)","scopes":["dev","prod"],"defaults":{"dev":"postgresql://postgres:change-me@host.docker.internal:54322/app?schema=public","prod":"postgresql://supabase_admin:change-me@host.docker.internal:54322/aiTestProdDB?schema=public"}}
DOCKER_DATABASE_URL=postgresql://postgres:change-me@host.docker.internal:54322/app?schema=public

# Auth
# @meta {"description":"Admin-Token für geschützte Endpoints","scopes":["dev","prod"],"defaults":{"dev":"please-change-me","prod":"please-change-me"}}
ADMIN_TOKEN=please-change-me
# Für lokale Übungen kann AUTH_DISABLED=true gesetzt werden
# @meta {"description":"Auth-Bypass für lokale Entwicklung","scopes":["dev"],"defaults":{"dev":"true"}}
AUTH_DISABLED=true

# n8n (Basic Auth aktiv, auch wenn nur lokal erreichbar)
# @meta {"description":"n8n Basic-Auth Benutzername","scopes":["dev","prod"],"defaults":{"dev":"admin","prod":"admin"}}
N8N_BASIC_AUTH_USER=admin
# @meta {"description":"n8n Basic-Auth Passwort","scopes":["dev","prod"],"defaults":{"dev":"change-me","prod":"change-me"}}
N8N_BASIC_AUTH_PASSWORD=change-me

# n8n E-Mail (lokal via Mailpit)
# @meta {"description":"E-Mail-Modus für n8n","scopes":["dev","prod"],"defaults":{"dev":"smtp","prod":"smtp"}}
N8N_EMAIL_MODE=smtp
# @meta {"description":"SMTP Host für n8n","scopes":["dev","prod"],"defaults":{"dev":"mailpit","prod":"smtp.example.com"}}
N8N_SMTP_HOST=mailpit
# @meta {"description":"SMTP Port","scopes":["dev","prod"],"defaults":{"dev":"1025","prod":"587"}}
N8N_SMTP_PORT=1025
# @meta {"description":"SMTP SSL aktivieren?","scopes":["dev","prod"],"defaults":{"dev":"false","prod":"true"}}
N8N_SMTP_SSL=false
# @meta {"description":"SMTP Benutzername","scopes":["dev","prod"],"defaults":{"dev":"","prod":"smtp-user"}}
N8N_SMTP_USER=
# @meta {"description":"SMTP Passwort","scopes":["dev","prod"],"defaults":{"dev":"","prod":"smtp-pass"}}
N8N_SMTP_PASS=
# @meta {"description":"Absenderadresse für n8n","scopes":["dev","prod"],"defaults":{"dev":"\"n8n <no-reply@localhost>\"","prod":"\"n8n <no-reply@example.com>\""}}
N8N_SMTP_SENDER="n8n <no-reply@localhost>"
# @meta {"description":"Protokoll für n8n Links","scopes":["dev","prod"],"defaults":{"dev":"http","prod":"https"}}
N8N_PROTOCOL=http
# Lokal: Host erzeugt Links in E-Mails; für Server Domain eintragen
# @meta {"description":"n8n Hostname inkl. Port","scopes":["dev","prod"],"defaults":{"dev":"localhost:5678","prod":"n8n.example.com"}}
N8N_HOST=localhost:5678
# Optional: Setzen, wenn n8n hinter einem Proxy/Domain erreichbar ist
# @meta {"description":"Externe Webhook-URL von n8n","scopes":["dev","prod"],"defaults":{"dev":"http://n8n:5678","prod":"https://n8n.example.com"}}
N8N_WEBHOOK_URL=
# Supabase Proxy (Caddy → Kong). Host bleibt i. d. R. host.docker.internal, falls der Supabase-Stack separat läuft.
# @meta {"description":"Zielhost für Supabase (z. B. host.docker.internal)","scopes":["dev","prod"],"defaults":{"dev":"host.docker.internal","prod":"host.docker.internal"}}
SUPABASE_KONG_HOST=host.docker.internal
# @meta {"description":"HTTP-Port des Supabase-Kong Gateways","scopes":["dev","prod"],"defaults":{"dev":"8000","prod":"8000"}}
SUPABASE_KONG_PORT=8000
# @meta {"description":"Host-Port des Supabase-Poolers (Supavisor)","scopes":["dev","prod"],"defaults":{"dev":"6543","prod":"6543"}}
SUPABASE_POOLER_PORT=6543

# pgAdmin
# @meta {"description":"Login-E-Mail für pgAdmin","scopes":["dev"],"defaults":{"dev":"admin@example.com"}}
PGADMIN_DEFAULT_EMAIL=admin@example.com
# @meta {"description":"Passwort für pgAdmin","scopes":["dev"],"defaults":{"dev":"change-me"}}
PGADMIN_DEFAULT_PASSWORD=change-me

# @meta {"description":"n8n Flow für Chatbot-Webhook","scopes":["dev","prod"],"defaults":{"dev":"https://n8n.example.com/webhook/chatbot","prod":"https://n8n.example.com/webhook/chatbot"}}
N8N_CHATBOT_WEBHOOK_URL=https://n8n-ai-test.dakatos.online/webhook-test/cd58372c-1273-46e3-a18b-09333dc79372

# Repository-Konfiguration
# @meta {"description":"Neues Remote-Repository (optional, wird nach Setup übernommen)","scopes":["dev","prod"],"defaults":{"dev":"","prod":""}}
NEW_REMOTE_URL=
